#Range

''' print(range(5))
seq=range(5)
print(seq[0]) 
print(seq[1]) 
print(seq[2]) 
print(seq[3])      '''


''' seq=range(5)
for i in seq:
    print(i)
    
#or

for i in range(10):
    print(i)  '''  
    
''' for i in range(100): #range(stop)
    print(i)     
    
for i in range(11,100): #range(start,stop)
    print(i)     ''' 
    
''' for i in range(11,100,5): #range(start,stop,step-size)
    print(i)          '''
    
#print even number 

''' for i in range(2,100,2):
    print(i)    ''' 
    
#print odd number 
''' 
for i in range(1,100,2):
    print(i)    '''
    
    
#range practice questions

#1. Print numbers from 1 to 100.

''' for i in range(1,101):
    print(i)  '''
    
#2. Print numbers from 100 to 1.
''' 
for i in range(100,0,-1):
    print(i)  ''' 
    
    
#3. Print the multiplication table of a number n.

''' n=int(input("Enter your number"))

for i in range(1,11):
    print(n*i)          '''
    
    
